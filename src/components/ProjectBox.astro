---
interface Props {
  title: string;
  publishedAt: Date;
  description?: string;
  href: string;
  tags?: string[];
}

const { title, tags, publishedAt, description, href } = Astro.props;
---

<a
  class="group flex cursor-pointer flex-col gap-2 p-4"
  href={`/projects/${href}`}
  data-astro-prefetch
>
  <div class="flex-col gap-2">
    <div class="flex flex-row justify-between">
      <div class="flex flex-col sm:flex-row justify-between gap-2 items-center">
        <div class="flex flex-col sm:flex-row gap-4">
          <p class="text-base-content font-semibold">
            {title}
          </p>
          <div
            class="flex flex-wrap gap-2 items-center overflow-hidden truncate"
          >
            {tags?.map((tag) => <span class="badge badge-neutral">{tag}</span>)}
          </div>
        </div>
        <!-- <div class="flex flex-col sm:flex-row items-center gap-4">
        </div> -->
      </div>
      <div class="flex flex-row gap-2">
        <p class="text-neutral hidden md:block">
          {
            new Date(publishedAt).toLocaleDateString("en-us", {
              year: "numeric",
              month: "short",
              day: "numeric",
            })
          }
        </p>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#94a0a9"
          stroke-linecap="round"
          stroke-linejoin="round"
          color="#94a0a9"
          class="tabler-icon tabler-icon-arrow-up-right transition-none md:transition-all md:duration-300 md:group-hover:translate-x-1"
        >
          <>
            <path d="M17 7l-10 10"></path>
            <path d="M8 7l9 0l0 9"></path>
          </>
        </svg>
      </div>
    </div>
    <p class="text-neutral block md:hidden pt-4">
      {
        new Date(publishedAt).toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }
    </p>
  </div>
  <p class="">{description}</p>
</a>
